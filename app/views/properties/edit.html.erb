<!-- Validation failure messages -->
<% if @property.errors.any? %>
  <% @property.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Property #<%= @property.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_property/<%= @property.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for airbnb_price -->
      <div class="form-group">
        <label for="airbnb_price" class="control-label">
          Airbnb price
        </label>

        <input type="text" id="airbnb_price" name="airbnb_price" placeholder="Airbnb price" class="form-control" value="<%= @property.airbnb_price %>">
      </div>

      <!-- Label and input for listing_price -->
      <div class="form-group">
        <label for="listing_price" class="control-label">
          Listing price
        </label>

        <input type="text" id="listing_price" name="listing_price" placeholder="Listing price" class="form-control" value="<%= @property.listing_price %>">
      </div>

      <!-- Label and input for sublease_price -->
      <div class="form-group">
        <label for="sublease_price" class="control-label">
          Sublease price
        </label>

        <input type="text" id="sublease_price" name="sublease_price" placeholder="Sublease price" class="form-control" value="<%= @property.sublease_price %>">
      </div>

      <!-- Label and input for region_id -->
      <div class="form-group">
        <label for="region_id" class="control-label">
          Region
        </label>

        <%= select_tag(:region_id, options_from_collection_for_select(Region.all, :id, :country, @property.region_id), :class => "form-control") %>
      </div>

      <!-- Label and input for pathway_id -->
      <div class="form-group">
        <label for="pathway_id" class="control-label">
          Pathway
        </label>

        <input type="text" id="pathway_id" name="pathway_id" placeholder="Pathway" class="form-control" value="<%= @property.pathway_id %>">
      </div>

      <button class="btn btn-warning">
        Update Property
      </button>
      or
      <a href="/properties/<%= @property.id %>">Cancel</a>
    </form>
  </div>
</div>
