<div class="page-header">
  <h1>
    Joint ventures
    <a href="/joint_ventures/new" class="btn btn-lg btn-success">New Joint venture</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Investor</th>
        <th>Actions</th>
      </tr>

      <% @joint_ventures.each do |joint_venture| %>
      <tr>
        <td>
          <% if joint_venture.investor.present? %>
            <a href="/investors/<%= joint_venture.investor.id %>">
              <%= joint_venture.investor.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/joint_ventures/<%= joint_venture.id %>" class="btn btn-primary">Show</a>
          <a href="/joint_ventures/<%= joint_venture.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_joint_venture/<%= joint_venture.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @joint_ventures, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
