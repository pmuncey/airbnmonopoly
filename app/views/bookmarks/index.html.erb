<div class="page-header">
  <h1>
    Bookmarks
    <a href="/bookmarks/new" class="btn btn-lg btn-success">New Bookmark</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Investor</th>
        <th>Property</th>
        <th>Pathway</th>
        <th>Joint venture</th>
        <th>Actions</th>
      </tr>

      <% @bookmarks.each do |bookmark| %>
      <tr>
        <td>
          <% if bookmark.user.present? %>
            <a href="/investors/<%= bookmark.user.id %>">
              <%= bookmark.user.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if bookmark.property.present? %>
            <a href="/properties/<%= bookmark.property.id %>">
              <%= bookmark.property.airbnb_price %>
            </a>
          <% end %>
        </td>
        <td>
          <% if bookmark.pathway.present? %>
            <a href="/pathways/<%= bookmark.pathway.id %>">
              <%= bookmark.pathway.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if bookmark.joint_venture.present? %>
            <a href="/joint_ventures/<%= bookmark.joint_venture.id %>">
              <%= bookmark.joint_venture.investor_id %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/bookmarks/<%= bookmark.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == bookmark.user %>
            <a href="/bookmarks/<%= bookmark.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_bookmark/<%= bookmark.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @bookmarks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
