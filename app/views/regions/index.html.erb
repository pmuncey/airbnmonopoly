<div class="page-header">
  <h1>
    Regions
    <a href="/regions/new" class="btn btn-lg btn-success">New Region</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "regions_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :country_cont, "Country contains" %>
    <%= f.text_field :country_cont, :class => "form-control", :placeholder => "Country contains" %>
  </div>

<div class="form-group">
    <%= f.label :longitude_cont, "Longitude contains" %>
    <%= f.text_field :longitude_cont, :class => "form-control", :placeholder => "Longitude contains" %>
  </div>

<div class="form-group">
    <%= f.label :latitude_cont, "Latitude contains" %>
    <%= f.text_field :latitude_cont, :class => "form-control", :placeholder => "Latitude contains" %>
  </div>

<div class="form-group">
    <%= f.label :neighborhood_cont, "Neighborhood contains" %>
    <%= f.text_field :neighborhood_cont, :class => "form-control", :placeholder => "Neighborhood contains" %>
  </div>

<div class="form-group">
    <%= f.label :city_cont, "City contains" %>
    <%= f.text_field :city_cont, :class => "form-control", :placeholder => "City contains" %>
  </div>

<div class="form-group">
    <%= f.label :state_cont, "State contains" %>
    <%= f.text_field :state_cont, :class => "form-control", :placeholder => "State contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
  <%= f.label :airbnb_price, "Property Airbnb price" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :properties_airbnb_price_gteq, :class => "form-control", :placeholder => "Property Airbnb price greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :properties_airbnb_price_lteq, :class => "form-control", :placeholder => "Property Airbnb price less than or equal to" %>
    </div>
  </div>
</div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/regions" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#regions_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Country</th>
        <th>State</th>
        <th>City</th>
        <th>Neighborhood</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Actions</th>
      </tr>

      <% @regions.each do |region| %>
      <tr>
        <td><%= region.country %></td>
        <td><%= region.state %></td>
        <td><%= region.city %></td>
        <td><%= region.neighborhood %></td>
        <td><%= region.latitude %></td>
        <td><%= region.longitude %></td>
        <td>
          <a href="/regions/<%= region.id %>" class="btn btn-primary">Show</a>
          <a href="/regions/<%= region.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_region/<%= region.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @regions, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
