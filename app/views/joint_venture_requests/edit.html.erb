<!-- Validation failure messages -->
<% if @joint_venture_request.errors.any? %>
  <% @joint_venture_request.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Joint Venture Request #<%= @joint_venture_request.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_joint_venture_request/<%= @joint_venture_request.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      
      

      <!-- Label and input for receiver_id -->
      <div class="form-group">
        <label for="receiver_id" class="control-label">
          Receiver
        </label>

        <%= select_tag(:receiver_id, options_from_collection_for_select(Investor.all, :id, :created_at, @joint_venture_request.receiver_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Joint Venture Request
      </button>
      or
      <a href="/joint_venture_requests/<%= @joint_venture_request.id %>">Cancel</a>
    </form>
  </div>
</div>
